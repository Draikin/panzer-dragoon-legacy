<%= form_for @category_group do |f| %>
  <%= render "shared/form/error_messages", model: @category_group %>
  <fieldset>
    <%= f.label :category_group_type, "Category Group Type" %>
    <%= f.collection_select :category_group_type,
      CategoryGroup::CATEGORY_GROUP_TYPES,
      :to_s,
      :titleize,
      {},
      class: 'form-control'
    %>
  </fieldset>
  <%= render 'shared/form/name', f: f %>
  <%= render 'shared/form/save_buttons', f: f %>
<% end %>

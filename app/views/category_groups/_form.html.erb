<%= form_for @category_group do |f| %>
  <%= render "shared/error_messages", target: @category_group %>
  <fieldset>
    <%= f.label :category_group_type, "Category Group Type" %>
    <%= f.collection_select :category_group_type,
      CategoryGroup::CATEGORY_GROUP_TYPES,
      :to_s,
      :titleize,
      {},
      class: 'form-control'
    %>
  </fieldset>
  <fieldset>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: 'form-control' %>
  </fieldset>
  <%= f.submit "Save", class: 'btn btn-primary' %>
  <%= f.submit "Save and Continue Editing",
    name: :continue_editing,
    class: 'btn btn-secondary' %>
<% end %>

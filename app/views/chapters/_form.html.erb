<%= nested_form_for @chapter, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', target: @chapter %>
  <fieldset>
    <%= f.label :story_id, 'Story' %>
    <%= f.collection_select :story_id,
      Story.order(:name),
      :id,
      :name,
      {},
      class: 'form-control'
    %>
  </fieldset>
  <fieldset>
    <%= f.label :chapter_type, 'Chapter Type' %>
    <%= f.collection_select :chapter_type,
      Chapter::CHAPTER_TYPES,
      :to_s,
      :titleize,
      {},
      class: 'form-control'
    %>
  </fieldset>
  <fieldset>
    <%= f.label :number, 'Number' %>
    <%= f.number_field :number, { min: 1, max: 99, class: 'form-control' } %>
    <small class="text-muted">
      Enter 1 for the prologue or epilogue, 2 for a second prologue/epilogue.
      Regular chapters are numbered as you would expect.
    </small>
  </fieldset>
  <%= render partial: 'shared/form/name', locals: { f: f } %>
  <%= render partial: 'shared/form/content', locals: { f: f } %>
  <%= render partial: 'shared/form/illustrations',
    locals: { illustrations: @illustrations, f: f }
  %>
  <%= render partial: 'shared/form/save_buttons', locals: { f: f } %>
<% end %>

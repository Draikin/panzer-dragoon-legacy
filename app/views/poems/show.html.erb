<% title @poem.name %>
<% description @poem.description %>

<% unless @poem.publish %>
  <span class="label label-warning">Unpublished</span>
<% end %>

<% if policy(Poem).new? || policy(@poem).edit? || policy(@poem).destroy? %>
  <div class="btn-group" role="group">
    <% if policy(Poem).new? %>
      <%= link_to 'New Poem',
        new_poem_path,
        { class: 'btn btn-secondary', role: 'button' }
      %>
    <% end %>
    <% if policy(@poem).edit? %>
      <%= link_to 'Edit Poem',
        edit_poem_path(@poem),
        { class: 'btn btn-secondary', role: 'button' }
      %>
    <% end %>
    <% if policy(@poem).destroy? %>
      <%= link_to 'Delete Poem',
        @poem,
        data: { confirm: 'Are you sure you want to delete this poem?' },
        method: :delete,
        class: 'btn btn-danger',
        role: 'button'
      %>
    <% end %>
  </div>
<% end %>

<h2>Written By:</h2>
<ul>
  <% @poem.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<%= raw markdown_to_html @poem.content %>

<%= render partial: 'shared/related_encyclopaedia_entries' %>


<ol class="breadcrumb">
  <li><%= link_to 'Home', root_url %></li>
  <li><%= link_to 'Poems', poems_path %></li>
  <li class="active"><%= @poem.name %></li>
</ol>

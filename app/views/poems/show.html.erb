<% title @poem.name %>
<% description @poem.description %>

<% unless @poem.publish %>
  <span class="label label-warning">Unpublished</span>
<% end %>

<% if policy(Poem).new? || policy(@poem).edit? || policy(@poem).destroy? %>
  <div class="btn-group" role="group">
    <% if policy(Poem).new? %>
      <%= link_to new_poem_path,
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'pencil' %> New Poem
      <% end %>
    <% end %>
    <% if policy(@poem).edit? %>
      <%= link_to edit_poem_path(@poem),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'edit' %> Edit Poem
      <% end %>
    <% end %>
    <% if policy(@poem).destroy? %>
      <%= link_to @poem,
        data: { confirm: 'Are you sure you want to delete this poem?' },
        method: :delete,
        class: 'btn btn-danger',
        role: 'button' do %>
        <%= fa_icon 'trash' %> Delete Poem
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Written By:</h2>
<ul>
  <% @poem.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<%= raw markdown_to_html @poem.content %>

<%= render 'shared/show/related_encyclopaedia_entries' %>

<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'Home', root_url %></li>
  <li class="breadcrumb-item"><%= link_to 'Poems', poems_path %></li>
  <li class="breadcrumb-item active"><%= @poem.name %></li>
</ol>

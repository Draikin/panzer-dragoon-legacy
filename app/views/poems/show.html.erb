<% title @poem.name %>
<% description @poem.description %>

<% unless @poem.publish %>
  <p class="unpublished">Unpublished</p>
<% end %>

<% if policy(@poem).new? or policy(@poem).edit? or policy(@poem).destroy? %>
  <ul class="administration">
    <% if policy(@poem).new? %>
      <li><%= link_to 'New Poem', new_poem_path %></li>
    <% end %>
    <% if policy(@poem).edit? %>
      <li><%= link_to 'Edit Poem', edit_poem_path(@poem) %></li>
    <% end %>
    <% if policy(@poem).destroy? %>
      <li>
        <%= link_to 'Delete Poem', @poem, data: {
          confirm: 'Are you sure you want to delete this poem?' },
          method: :delete %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Written By:</h2>
<ul class="thumbnail_and_name_list">
  <% @poem.contributor_profiles.each do |contributor_profile| %>
    <li>
      <%=
        link_to(
          show_avatar(contributor_profile, :mini_thumbnail),
          contributor_profile
        )
      %>
      <h3><%= link_to contributor_profile.name, contributor_profile %></h3>
    </li>
  <% end %>
</ul>
<%= raw markdown_to_html @poem.content %>

<%= render partial: 'shared/related_encyclopaedia_entries' %>

<p class="links"><%= link_to 'Poems', poems_path %></p>

<% title @poem.name %>
<% description @poem.description %>

<% unless @poem.publish %>
  <p class="unpublished">Unpublished</p>
<% end %>

<% if policy(@poem).new? or policy(@poem).edit? or policy(@poem).destroy? %>
  <div class="ui three item stackable menu">
    <% if policy(@poem).new? %>
      <%= link_to new_poem_path, class: 'item' do %>
        <i class="write icon"></i> New Poem
      <% end %>
    <% end %>
    <% if policy(@poem).edit? %>
      <%= link_to edit_poem_path(@poem), class: 'item' do %>
        <i class="edit icon"></i> Edit Poem
      <% end %>
    <% end %>
    <% if policy(@poem).destroy? %>
      <%= link_to @poem, data: {
        confirm: 'Are you sure you want to delete this poem?' },
        method: :delete, class: 'item' do %>
        <i class="trash icon"></i> Delete Poem
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Written By:</h2>
<ul>
  <% @poem.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<%= raw markdown_to_html @poem.content %>

<%= render partial: 'shared/related_encyclopaedia_entries' %>

<p class="links"><%= link_to 'Poems', poems_path %></p>

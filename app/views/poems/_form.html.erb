<%= form_for @poem do |f| %>
  <%= render "shared/error_messages", target: @poem %>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description, rows: 3 %>
  </div>
  <div>
    <%= f.label :content, "Content" %><br />
    (You may use a <a href="/markdown-syntax-guide" target="_blank">limited
      subset of Markdown</a> to format the poem's content)<br />
    <%= f.text_area :content, class: "data_entry" %>
  </div>
  <label>Contributors</label>
  <div class="scroll_checkboxes">
    <% for contributor_profile in ContributorProfile.order(:name) %>
      <label>
        <%= check_box_tag "poem[contributor_profile_ids][]", 
          contributor_profile.id,
          @poem.contributor_profiles.include?(contributor_profile) %>
        <%= contributor_profile.name %>
      </label>
      <br />
    <% end %>
  </div>
  <div>
    <label>Related Encyclopaedia Entries</label>
    <div class="scroll_checkboxes">
      <% for encyclopaedia_entry in EncyclopaediaEntry.order(:name) %>
        <label>
          <%= check_box_tag "poem[encyclopaedia_entry_ids][]",
            encyclopaedia_entry.id,
            @poem.encyclopaedia_entries.include?(encyclopaedia_entry) %>
          <%= encyclopaedia_entry.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <% if policy(@poem).permitted_attributes.include? :publish %>
    <div>
      <%= f.check_box :publish %> <%= f.label :publish, "Publish?" %>
    </div>
  <% end %>
  <div>
    <%= f.submit "Save and View" %>
    <%= f.submit "Save and Continue Editing", name: :continue_editing %>
  </div>
<% end %>

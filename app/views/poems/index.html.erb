<% if @dragoon %>
  <% title "#{@dragoon.name}'s Poems" %>
<% else %>
  <% title "Poems" %>
<% end %>

<% if policy(Poem).new? %>
  <ul class="administration">
    <li><%= link_to 'New Poem', new_poem_path %></li>
  </ul>
<% end %>

<% if @poems %>
  <div id="resources">
    <% @poems.each do |poem| %>
      <div class="resource">
        <div class="details">
          <h2><%= link_to poem.name, poem %></h2>
          <% unless poem.publish %>
            <p class="unpublished">Unpublished</p>
          <% end %>
          <p><%= poem.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @poems %>
<% end %>

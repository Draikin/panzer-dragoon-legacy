<%= form_for @picture, html: { multipart: true } do |f| %>
  <%= render "shared/error_messages", target: @picture %>
  <div>
    <%= f.label :category_id, "Category" %><br />
    <%= f.collection_select :category_id, @categories, :id, :name,
      include_blank: false %>
  </div>
  <div>
    <%= f.label :picture, "Picture" %><br />
    <% if @picture.picture? %>
    <%= image_tag @picture.picture.url(:thumbnail) %><br />
    File has already been uploaded. Replace file?<br />
    <% end %>
    <%= f.file_field :picture %>
  </div>
  <div>
    <%= f.label :name, "Name" %><br />
    (You should refer to the <a href="/naming-convention" target="_blank">
    naming convention</a> when naming pictures)<br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description, rows: 5 %>
  </div>
  <div>
    <%= f.label :information, "Information" %><br />
    <%= f.text_area :information, class: "data_entry" %>
  </div>
  <label>Contributors</label>
  <div class="scroll_checkboxes">
    <% for dragoon in Dragoon.order(:name) %>
      <label>
        <%= check_box_tag "picture[dragoon_ids][]", dragoon.id,
          @picture.dragoons.include?(dragoon) %>
        <%= dragoon.name %>
      </label>
      <br />
    <% end %>
  </div>
  <div>
    <label>Related Encyclopaedia Entries</label>
    <div class="scroll_checkboxes">
      <% for encyclopaedia_entry in EncyclopaediaEntry.order(:name) %>
        <label>
          <%= check_box_tag "picture[encyclopaedia_entry_ids][]",
            encyclopaedia_entry.id,
            @picture.encyclopaedia_entries.include?(encyclopaedia_entry) %>
          <%= encyclopaedia_entry.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <%= f.check_box :publish %> <%= f.label :publish, "Publish?" %>
  </div>
  <div>
    <%= f.submit "Save and View" %>
    <%= f.submit "Save and Continue Editing", name: :continue_editing %>
  </div>
<% end %>

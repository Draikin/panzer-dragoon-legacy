<% title @quiz.name %>
<% description @quiz.description %>

<% unless @quiz.publish %>
  <span class="label label-warning">Unpublished</span>
<% end %>

<% if policy(Quiz).new? || policy(@quiz).edit? || policy(@quiz).destroy? %>
  <div class="btn-group" role="group">
    <% if policy(Quiz).new? %>
      <%= link_to new_poem_path,
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'pencil' %> New Quiz
      <% end %>
    <% end %>
    <% if policy(@quiz).edit? %>
      <%= link_to edit_quiz_path(@quiz),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'edit' %> Edit Quiz
      <% end %>
    <% end %>
    <% if policy(@quiz).destroy? %>
      <%= link_to @quiz,
        data: { confirm: 'Are you sure you want to delete this quiz?' },
        method: :delete,
        class: 'btn btn-danger',
        role: 'button' do %>
        <%= fa_icon 'trash' %> Delete Quiz
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Created By:</h2>
<ul>
  <% @quiz.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<% if @show_results %>
  <%= render 'show_results' %>
<% else %>
  <%= render 'show_quiz' %>
<% end %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_url %></li>
  <li><%= link_to 'Quizzes', quizzes_path %></li>
  <li class="active"><%= @quiz.name %></li>
</ol>

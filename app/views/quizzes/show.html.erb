<% title @quiz.name %>
<% description @quiz.description %>

<% unless @quiz.publish %>
  <p class="unpublished">Unpublished</p>
<% end %>

<% if policy(@quiz).new? or policy(@quiz).edit? or policy(@quiz).destroy? %>
  <div class="ui three item stackable menu">
    <% if policy(@quiz).new? %>
      <%= link_to new_quiz_path, class: 'item' do %>
        <i class="write icon"></i> New Quiz
      <% end %>
    <% end %>
    <% if policy(@quiz).edit? %>
      <%= link_to edit_quiz_path(@quiz), class: 'item' do %>
        <i class="edit icon"></i> Edit Quiz
      <% end %>
    <% end %>
    <% if policy(@quiz).destroy? %>
      <%= link_to @quiz, data: {
        confirm: 'Are you sure you want to delete this quiz?' },
        method: :delete, class: 'item' do %>
        <i class="trash icon"></i> Delete Quiz
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Created By:</h2>
<ul>
  <% @quiz.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<% if @show_results %>
  <%= render 'show_results' %>
<% else %>
  <%= render 'show_quiz' %>
<% end %>

<p class="links"><%= link_to 'Quizzes', quizzes_path %></p>

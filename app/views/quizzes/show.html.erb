<% title @quiz.name %>
<% description @quiz.description %>

<% unless @quiz.publish %>
  <p class="unpublished">Unpublished</p>
<% end %>

<% if policy(Quiz).new? || policy(@quiz).edit? || policy(@quiz).destroy? %>
  <div class="btn-group" role="group">
    <% if policy(Quiz).new? %>
      <%= link_to 'New Poem',
        new_poem_path,
        { class: 'btn btn-secondary', role: 'button' }
      %>
    <% end %>
    <% if policy(@quiz).edit? %>
      <%= link_to 'Edit Quiz',
        edit_quiz_path(@quiz),
        { class: 'btn btn-secondary', role: 'button' }
      %>
    <% end %>
    <% if policy(@quiz).destroy? %>
      <%= link_to 'Delete Quiz',
        @quiz,
        data: { confirm: 'Are you sure you want to delete this quiz?' },
        method: :delete,
        class: 'btn btn-danger',
        role: 'button'
      %>
    <% end %>
  </div>
<% end %>

<h2>Created By:</h2>
<ul>
  <% @quiz.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<% if @show_results %>
  <%= render 'show_results' %>
<% else %>
  <%= render 'show_quiz' %>
<% end %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_url %></li>
  <li><%= link_to 'Quizzes', quizzes_path %></li>
  <li class="active"><%= @quizzes.name %></li>
</ol>

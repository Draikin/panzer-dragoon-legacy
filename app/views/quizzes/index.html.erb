    <li><%= link_to 'New Quiz', new_quiz_path %></li>
  </ul>
<% end %>

<%= render 'list' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_url %></li>
  <li class="active">Quizzes</li>
</ol>

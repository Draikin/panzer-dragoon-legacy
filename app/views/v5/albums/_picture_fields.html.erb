<div class="illustration nested-fields">
  <div>
    <%= f.label :name, 'Name' %>
  </div>
  <div>
    <%= f.text_field :name, class: 'child_input' %>
  </div>
  <div>
    <%= f.label :description, 'Description' %>
  </div>
  <div>
    <%= f.text_area :description, class: 'child_input' %>
  </div>
  <div>
    <%= f.label :information, 'Extra Information' %>
  </div>
  <div>
    <%= f.text_area :information, class: 'child_input' %>
  </div>
  <div>
    <%= f.label :picture, 'Picture' %>
  </div>
  <div>
    <% if f.object.picture_file_name.present? %>
      <%= image_tag f.object.picture.url(:thumbnail) %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :picture %>
  </div>
  <%= link_to_remove_association 'Delete Picture', f %><br />
</div>

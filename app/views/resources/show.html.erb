<% title @resource.name %>
<% description truncated_text(@resource.content) %>

<% if !@resource.publish %>
  <p class="unpublished">Unpublished</p>
<% elsif !@resource.category.publish %>
  <p class="unpublished">Published in Unpublished Category</p>
<% end %>

<% if policy(@resource).new? or policy(@resource).edit? or 
  policy(@resource).destroy? %>
  <div class="ui three item stackable menu">
    <% if policy(@resource).new? %>
      <%= link_to new_resource_path, class: 'item' do %>
        <i class="write icon"></i> New Resource
      <% end %>
    <% end %>
    <% if policy(@resource).edit? %>
      <%= link_to edit_resource_path(@resource), class: 'item' do %>
        <i class="edit icon"></i> Edit Resource
      <% end %>
    <% end %>
    <% if policy(@resource).destroy? %>
      <%= link_to @resource, data: {
        confirm: 'Are you sure you want to delete this resource?' },
        method: :delete, class: 'item' do %>
        <i class="trash icon"></i> Delete Resource
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Contributed By:</h2>
<ul>
  <% @resource.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<%= raw illustrated_markdown_to_html @resource.id, "Resource",
  @resource.content %>

<%= render partial: 'shared/related_encyclopaedia_entries' %>

<div class="ui breadcrumb">
  <%= link_to "Home", root_url, class: 'section' %>
  <div class="divider"> / </div>
  <%= link_to 'Resources', resources_path, class: 'section' %>
  <div class="divider"> / </div>
  <%= link_to @resource.category.name, category_path(@resource.category), 
    class: 'section' %>
  <div class="divider"> / </div>
  <div class="active section"><%= @resource.name %></div>
</div>

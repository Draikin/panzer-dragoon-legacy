<% title @resource.name %>
<% description truncated_text(@resource.content) %>

<% if !@resource.publish %>
  <span class="label label-warning">Unpublished</span>
<% elsif !@resource.category.publish %>
  <span class="label label-warning">Published in Unpublished Category</span>
<% end %>

<% if policy(Resource).new? ||
  policy(@resource).edit? ||
  policy(@resource).destroy?
%>
  <div class="btn-group" role="group">
    <% if policy(Resource).new? %>
      <%= link_to new_resource_path(category: @resource.category),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'pencil' %> New Resource
      <% end %>
    <% end %>
    <% if policy(@resource).edit? %>
      <%= link_to edit_resource_path(@resource),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'edit' %> Edit Resource
      <% end %>
    <% end %>
    <% if policy(@resource).destroy? %>
      <%= link_to @resource,
        data: { confirm: 'Are you sure you want to delete this resource?' },
        method: :delete,
        class: 'btn btn-danger',
        role: 'button' do %>
        <%= fa_icon 'trash' %> Delete Resource
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Contributed By:</h2>
<ul>
  <% @resource.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<%= raw @resource.illustrated_content %>

<%= render 'shared/show/related_encyclopaedia_entries' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_url %></li>
  <li><%= link_to 'Resources', resources_path %></li>
  <li><%= link_to @resource.category.name,
    category_path(@resource.category) %></li>
  <li class="active"><%= @resource.name %></li>
</ol>

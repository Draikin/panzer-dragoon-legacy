<% unless @downloads.empty? %>
  <div id="resources">
		<% @downloads.each do |download| %>
			<div class="resource">
			  <div class="details">
			  	<h2><%= link_to download.name, download %></h2>
					<% unless download.publish %>
					  <p class="unpublished">Unpublished</p>
					<% end %>
				  <p><%= download.description %></p>
			  </div>
		  </div>
		<% end %>
	</div>
<% end %>

<%= paginate @downloads %>
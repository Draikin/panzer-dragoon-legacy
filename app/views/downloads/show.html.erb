<% title @download.name %>
<% description @download.description %>

<% if !@download.publish %>
  <span class="label label-warning">Unpublished</span>
<% elsif !@download.category.publish %>
  <span class="label label-warning">Published in Unpublished Category</span>
<% end %>

<% if policy(Download).new? ||
  policy(@download).edit? ||
  policy(@download).destroy?
%>
  <div class="btn-group" role="group">
    <% if policy(Download).new? %>
      <%= link_to new_download_path(category: @download.category),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'upload' %> New Download
      <% end %>
    <% end %>
    <% if policy(@download).edit? %>
      <%= link_to edit_download_path(@download),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'edit' %> Edit Download
      <% end %>
    <% end %>
    <% if policy(@download).destroy? %>
      <%= link_to @download,
        data: { confirm: 'Are you sure you want to delete this download?' },
        method: :delete,
        class: 'btn btn-danger',
        role: 'button' do %>
        <%= fa_icon 'trash' %> Delete Download
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Contributed By:</h2>
<ul>
  <% @download.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<p><%= @download.description %></p>

<%= link_to "Download File", @download.download.url %>

<%= render 'shared/show/related_encyclopaedia_entries' %>

<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'Home', root_url %></li>
  <li class="breadcrumb-item"><%= link_to 'Downloads', downloads_path %></li>
  <li class="breadcrumb-item"><%= link_to @download.category.name,
    category_path(@download.category) %></li>
  <li class="breadcrumb-item active"><%= @download.name %></li>
</ol>

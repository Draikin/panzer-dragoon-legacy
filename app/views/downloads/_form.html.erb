<%= form_for @download, html: { multipart: true } do |f| %>
  <%= render 'shared/form/error_messages', model: @download %>
  <%= render 'shared/form/category', categories: @categories, f: f %>
  <%= render 'shared/form/contributors', model: @download, f: f %>
  <fieldset>
    <%= f.label :download, 'Download' %>
    <% if @download.download? %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :download, class: 'form-control' %>
  </fieldset>
  <%= render 'shared/form/name', f: f %>
  <%= render 'shared/form/description', f: f %>
  <%= render 'shared/form/extra_information', f: f %>
  <%= render 'shared/form/related_encyclopaedia_entries',
    model: @download,
    f: f
  %>
  <%= render 'shared/form/publish', model: @download, f: f %>
  <%= render 'shared/form/save_buttons', f: f %>
<% end %>

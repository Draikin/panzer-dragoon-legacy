<% title "Password Reset" %>

<p>Fill out the form below and instructions to reset your password will be emailed to you:</p>

<%= form_tag password_resets_path do %>  
  <p>  
    <%= label_tag :name_or_email_address %><br />  
    <%= text_field_tag :name_or_email_address, params[:name_or_email_address] %>  
  </p>
  <p>
    <%= submit_tag "Send me an email" %>
  </p>  
<% end %>
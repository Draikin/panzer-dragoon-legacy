<% @project_discussion_comments.each do |project_discussion_comment| %>  
  <div class="resource">
	  <div class="comment_thumbnail">
			<% if project_discussion_comment.dragoon.avatar_file_name.blank? %>
			  <%= image_tag("default-avatar.jpg") %>
			<% else %>
			  <%= image_tag project_discussion_comment.dragoon.avatar.url(:thumbnail) %><br />
			<% end %>
	  </div>
	  <div class="comment_details">
		  <p class="name_and_date">Posted by <%= link_to project_discussion_comment.dragoon.name, dragoon_path(project_discussion_comment.dragoon) %> <%= time_ago_in_words(project_discussion_comment.created_at) %> ago.</p>
		  <%= raw markdown_to_html project_discussion_comment.message %>
			<% if can? :update, project_discussion_comment %>
				<ul class="comment_administration">
		    	<li><%= link_to 'Edit Comment', edit_project_project_discussion_project_discussion_comment_path(@project_discussion.project, @project_discussion, project_discussion_comment) %></li>
		      <% if can? :manage, project_discussion_comment %>
			      <li><%= link_to 'Delete Comment', [@project_discussion.project, @project_discussion, project_discussion_comment], :confirm => 'Are you sure you want to delete this comment?', :method => :delete %></li>
			    <% end %>
			  </ul>
			<% end %>
		</div>
	</div>
<% end %>
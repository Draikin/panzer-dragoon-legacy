<%= form_for @music_track, html: { multipart: true } do |f| %>
  <%= render 'shared/form/error_messages', model: @music_track %>
  <%= render 'shared/form/category', categories: @categories, f: f %>
  <%= render 'shared/form/contributors', model: @music_track, f: f %>
  <fieldset>
    <%= f.label :mp3_music_track, 'MP3 Music Track' %>
    <% if @music_track.mp3_music_track? %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :mp3_music_track, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :ogg_music_track, 'Ogg Vorbis Music Track' %>
    <% if @music_track.ogg_music_track? %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :ogg_music_track, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :flac_music_track, 'FLAC Music Track (optional)' %>
    <% if @music_track.flac_music_track? %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :flac_music_track, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :track_number, 'Track Number' %>
    <%= f.number_field :track_number,
      { min: 0, max: 50, class: 'form-control' }
    %>
  </fieldset>
  <%= render 'shared/form/name', f: f %>
  <%= render 'shared/form/description', f: f %>
  <%= render 'shared/form/extra_information', f: f %>
  <%= render 'shared/form/related_encyclopaedia_entries',
    model: @music_track,
    f: f
  %>
  <%= render 'shared/form/publish', model: @music_track, f: f %>
  <%= render 'shared/form/save_buttons', f: f %>
<% end %>

<%= form_for @music_track, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', target: @music_track %>
  <fieldset>
    <%= f.label :category_id, 'Category' %>
    <%= f.collection_select :category_id,
      @categories,
      :id,
      :name,
      { include_blank: true },
      class: 'form-control'
    %>
  </fieldset>
  <fieldset>
    <%= f.label :contributor_profile_ids, 'Contributors' %>
    <%= f.collection_select :contributor_profile_ids,
      ContributorProfile.order(:name),
      :id,
      :name,
      { selected: @music_track.contributor_profile_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
     %>
  </fieldset>
  <fieldset>
    <%= f.label :mp3_music_track, 'MP3 Music Track' %>
    <% if @music_track.mp3_music_track? %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :mp3_music_track, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :ogg_music_track, 'Ogg Vorbis Music Track' %>
    <% if @music_track.ogg_music_track? %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :ogg_music_track, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :flac_music_track, 'FLAC Music Track (optional)' %>
    <% if @music_track.flac_music_track? %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :flac_music_track, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :track_number, 'Track Number' %>
    <%= f.number_field :track_number,
      { min: 0, max: 50, class: 'form-control' }
    %>
  </fieldset>
  <fieldset>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :description, 'Description' %>
    <%= f.text_area :description, rows: 3, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :information, 'Extra Information' %>
    <%= f.text_area :information, rows: 10, class: 'data_entry form-control' %>
    <small class="text-muted">
      You may use a <a href="/markdown-syntax-guide" target="_blank">limited
      subset of Markdown</a> to format the music track's extra information.
    </small>
  </fieldset>
  <fieldset>
    <%= f.label :encyclopaedia_entry_ids, 'Related Encyclopaedia Entries' %>
    <%= f.collection_select :encyclopaedia_entry_ids,
      EncyclopaediaEntry.order(:name),
      :id,
      :name,
      { selected: @music_track.encyclopaedia_entry_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <% if policy(@music_track).permitted_attributes.include? :publish %>
    <div class="checkbox">
      <label>
        <%= f.check_box :publish %> Publish?
      </label>
    </div>
  <% end %>
  <%= f.submit 'Save and View', class: 'btn btn-primary' %>
  <%= f.submit 'Save and Continue Editing',
    name: :continue_editing,
    class: 'btn btn-secondary'
  %>
<% end %>

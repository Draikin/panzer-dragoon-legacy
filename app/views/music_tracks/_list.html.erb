<% if @music_tracks %>
  <ul class="media-list">
    <% @music_tracks.each do |music_track| %>
      <li class="media">
        <div class="media-body">
          <h2>
            <% unless music_track.track_number == 0 %>
              <%= music_track.track_number.to_s + ". " %>
            <% end %><%= link_to music_track.name, music_track %>
          </h2>
          <% unless music_track.publish %>
            <span class="label label-warning">Unpublished</span>
          <% end %>
          <p><%= music_track.description %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @music_tracks %>
<% end %>

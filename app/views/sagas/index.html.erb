<% title "Sagas" %>

<% if policy(Saga).new? %>
  <%= link_to 'New Saga',
    new_saga_path,
    { class: 'btn btn-secondary', role: 'button' }
  %>
<% end %>

<% if @sagas %>
  <ul class="media-list">
    <% @sagas.each do |saga| %>
      <li class="media">
        <div class="media-body">
          <h2><%= saga.sequence_number %>. <%= saga.name %></h2>
          <% if policy(saga).edit? || policy(saga).destroy? %>
            <div class="btn-group" role="group">
              <% if policy(saga).edit? %>
                <%= link_to 'Edit Saga',
                  edit_saga_path(saga),
                  { class: 'btn btn-secondary', role: 'button' }
                %>
              <% end %>
              <% if policy(saga).destroy? %>
                <%= link_to 'Delete Saga',
                  saga,
                  data: { confirm: 'Are you sure?' },
                  method: :delete,
                  class: 'btn btn-danger',
                  role: 'button'
                %>
              <% end %>
            </div>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @sagas %>
<% end %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_url %></li>
  <li class="active">Sagas</li>
</ol>

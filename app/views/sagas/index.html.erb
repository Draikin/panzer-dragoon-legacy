<% title "Sagas" %>

<% if policy(Saga).new? %>
  <div class="ui one item stackable menu">
    <%= link_to new_saga_path, class: 'item' do %>
      <i class="tag icon"></i> New Saga
    <% end %>
  </div>
<% end %>

<% if @sagas %>
  <div class="ui very relaxed list">
    <% @sagas.each do |saga| %>
      <div class="item">
        <div class="content">
          <div class="header">
            <h2><%= saga.sequence_number %>. <%= saga.name %></h2>
          </div>
          <% if policy(saga).edit? or policy(saga).destroy? %>
            <div class="ui two item stackable menu">
              <% if policy(saga).edit? %>
                <%= link_to edit_saga_path(saga), class: 'item' do %>
                  <i class="configure icon"></i> Edit Saga
                <% end %>
              <% end %>
              <% if policy(saga).destroy? %>
                <%= link_to saga, data: {
                  confirm: 'Are you sure you want to delete this saga?' },
                  method: :delete, class: 'item' do %>
                  <i class="trash icon"></i> Delete Saga
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @sagas %>
<% end %>

<div class="ui breadcrumb">
  <%= link_to "Home", root_url, class: 'section' %>
  <div class="divider"> / </div>
  <div class="active section">Sagas</div>
</div>

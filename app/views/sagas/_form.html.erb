<%= form_for @saga do |f| %>
  <%= render 'shared/error_messages', target: @saga %>
  <div>
    <div>
      <%= f.label :encyclopaedia_entry_id, 'Encyclopaedia Entry*' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :encyclopaedia_entry_id,
          @encyclopaedia_entries,
          :id,
          :name,
          { include_blank: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :sequence_number, 'Sequence Number*' %>
    </div>
    <div>
      <%= f.number_field :sequence_number, { min: 1, max: 99 } %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :name, 'Name*' %>
    </div>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div>
    <%= f.submit 'Save and View Index' %>
    <%= f.submit 'Save and Continue Editing', name: :continue_editing %>
  </div>
<% end %>

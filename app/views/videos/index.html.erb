<% if @dragoon %>
  <% title "#{@dragoon.name}'s Videos" %>
<% else %>
  <% title "Videos" %>
<% end %>

<% if policy(Video).new? %>
  <ul class="administration">
    <li><%= link_to 'New Video', new_video_path %></li>
  </ul>
<% end %>

<% unless params[:dragoon_id] %>
  <% if @category_groups.present? %>
    <h2>Video Categories</h2>
    <%= render partial: 'site_map/category_groups', locals: {
      category_groups: @category_groups } %>
  <% end %>
  <% if @videos.present? %>
    <h2>All Videos</h2>
  <% end %>
<% end %>

<%= render 'list' %>

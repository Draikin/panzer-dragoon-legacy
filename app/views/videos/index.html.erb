<% if @contributor_profile %>
  <% title "#{@contributor_profile.name}'s Videos" %>
<% elsif params[:filter] == 'draft' %>
  <% title "Draft Videos" %>
<% else %>
  <% title "Videos" %>
<% end %>

<% if policy(Video).new? %>
  <div class="ui one item stackable menu">
    <%= link_to new_video_path, class: 'item' do %>
      <i class="upload icon"></i> New Video
    <% end %>
  </div>
<% end %>

<% unless params[:contributor_profile_id] %>
  <% if @category_groups.present? %>
    <div class="ui segment">
      <h2>Video Categories</h2>
      <%= render partial: 'site_map/category_groups', locals: {
        category_groups: @category_groups } %>
    </div>
  <% end %>
  <% if @videos.present? %>
    <h2>All Videos</h2>
  <% end %>
<% end %>

<%= render 'list' %>

<div class="ui breadcrumb">
  <%= link_to "Home", root_url, class: 'section' %>
  <div class="divider"> / </div>
  <div class="active section">Videos</div>
</div>

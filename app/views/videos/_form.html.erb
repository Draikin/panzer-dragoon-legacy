<%= form_for @video, :html => { :multipart => true } do |f| %>  
  <%= render "shared/error_messages", :target => @video %>    
  <p>  
    <%= f.label :category_id, "Category" %><br />
    <%= f.collection_select :category_id, @categories, :id, :name, :include_blank => false %> 
  </p>
  <p>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>  
  </p>
  <p>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description, :rows => 5 %>  
  </p>
  <p>
    <%= f.label :information, "Information" %><br />
    <%= render 'shared/wysiwym_basic_buttons' %>
    <%= f.text_area :information, :class => "data_entry" %>  
  </p>
  <p>  
    <%= f.label :mp4_video, "MP4 Video" %><br />
	<% if @video.mp4_video? %>
	 File has already been uploaded. Replace file?<br />
   <% end %>
    <%= f.file_field :mp4_video %>  
  </p>
  <p>  
    <%= f.label :webm_video, "WebM Video" %><br />
	  <% if @video.webm_video? %>
	    File has already been uploaded. Replace file?<br />
    <% end %>
    <%= f.file_field :webm_video %>  
  </p>
  <label>Contributors</label>
	<div class="scroll_checkboxes">
    <% for dragoon in Dragoon.order(:name) %>
      <label>
  	    <%= check_box_tag "video[dragoon_ids][]", dragoon.id, @video.dragoons.include?(dragoon) %>  
	      <%= dragoon.name %>
	    </label>
	    <br />
 		<% end %>
  </div>
  <label>Tags</label>
	<div class="scroll_checkboxes">
  	<% for tag in Tag.order(:name) %>
      <label>
  	    <%= check_box_tag "video[tag_ids][]", tag.id, @video.tags.include?(tag) %>  
	      <%= tag.name %>
	    </label>
	    <br />
 		<% end %>
  </div>
  <p>
    <%= f.check_box :publish %> <%= f.label :publish, "Publish?" %>
  </p>
	<p>  
	  <%= f.submit %>  
	</p>
<% end %>
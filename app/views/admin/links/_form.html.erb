<%= form_for [:admin, @link] do |f| %>
  <%= render 'admin/shared/form/error_messages', target: @link %>
  <%=
    render(
      partial: 'admin/shared/form/category',
      locals: { f: f, categories: @categories }
    )
  %>
  <%=
    render(
      partial: 'admin/shared/form/contributors',
      locals: {
        f: f, contributor_profile_ids: @link.contributor_profile_ids
      }
    )
  %>
  <%= render 'partner_site', f: f %>
  <%= render partial: 'admin/shared/form/name', locals: { f: f } %>
  <%= render 'url', f: f %>
  <%= render partial: 'admin/shared/form/description', locals: { f: f } %>
  <%=
    render(
      partial: 'admin/shared/form/encyclopaedia_entries',
      locals: {
        f: f, encyclopaedia_entry_ids: @link.encyclopaedia_entry_ids
      }
    )
  %>
  <%= render partial: 'admin/shared/form/save_buttons', locals: { f: f } %>
<% end %>

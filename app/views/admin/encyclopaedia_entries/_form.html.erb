<%= form_for [:admin, @encyclopaedia_entry], html: { multipart: true } do |f| %>
  <%= render 'admin/shared/form/error_messages', target: @encyclopaedia_entry %>
  <%=
    render(
      partial: 'admin/shared/form/category',
      locals: { f: f, categories: @categories }
    )
  %>
  <%=
    render(
      partial: 'admin/shared/form/contributors',
      locals: {
        f: f,
        contributor_profile_ids: @encyclopaedia_entry.contributor_profile_ids
      }
    )
  %>
  <%=
    render(
      partial: 'picture',
      locals: {
        f: f,
        encyclopaedia_entry: @encyclopaedia_entry
      }
    )
  %>
  <%= render partial: 'admin/shared/form/name', locals: { f: f } %>
  <%=
    render(
      partial: 'information_box',
      locals: {
        f: f,
        encyclopaedia_entry: @encyclopaedia_entry
      }
    )
  %>
  <%= render partial: 'admin/shared/form/content', locals: { f: f } %>
  <%= render partial: 'admin/shared/form/illustrations', locals: { f: f } %>
  <% if policy(@encyclopaedia_entry).permitted_attributes.include? :publish %>
    <%= render partial: 'admin/shared/form/publish', locals: { f: f } %>
  <% end %>
  <%= render partial: 'admin/shared/form/save_buttons', locals: { f: f } %>
<% end %>

<div
  class="nested-fields card"
  style="width: 390px; margin-bottom: 20px;"
>
  <% if f.object.illustration_file_name.blank? %>
   <div class="card-body">
      <h3 class="card-title">New Illustration</h3>
      <%= f.file_field :illustration %>
   </div>
  <% else %>
    <%= image_tag f.object.illustration.url, class: 'card-img-top' %>
    <div class="card-body">
      <p class="card-title"><%= f.object.illustration_file_name %></p>
      <a class="btn btn-secondary insert_tag" href="#" role="button">
        Insert Markdown Tag
      </a>
      <%=
        link_to_remove_association(
          'Remove Illustration',
          f,
          role: 'button',
          class: 'btn btn-danger'
        )
      %>
    </div>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :category_id, 'Category*' %>
  <%=
    f.collection_select(
      :category_id,
      categories,
      :id,
      :name,
      { include_blank: true },
      { class: 'form-control' }
    )
  %>
  <% if defined? warning %>
    <%=
      render(
        partial: 'admin/shared/form/warning',
        locals: { warning: warning }
      )
    %>
  <% end %>
</div>

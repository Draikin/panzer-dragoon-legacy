<div class="form-group">
  <%= f.label :download, 'Download*' %>
  <% if @download.download? %>
    <p>File has already been uploaded. Replace file?</p>
  <% end %>
  <%= f.file_field :download, class: 'form-control' %>
  <%=
    render(
      partial: 'admin/shared/form/warning',
      locals: { 
        warning: 'Download files must be of type ZIP (.zip). Other formats ' \
          'are not supported and will prevent this form from being saved.'
      }
    )
  %>
</div>

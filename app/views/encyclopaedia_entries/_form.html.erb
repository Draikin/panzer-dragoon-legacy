<%= nested_form_for @encyclopaedia_entry, html: { multipart: true, 
  class: 'ui form' } do |f| %>
  <%= render 'shared/error_messages', target: @encyclopaedia_entry %>
  <div class="field">
    <%= f.label :category_id, 'Category' %>
    <%= f.collection_select :category_id, @categories, :id, :name,
      { include_blank: true }, { class: 'ui search selection dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :contributor_profile_ids, 'Contributors (optional)' %>
    <%= f.collection_select :contributor_profile_ids, 
      ContributorProfile.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.contributor_profile_ids, 
      include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :encyclopaedia_entry_picture, 'Encyclopaedia Entry Picture' %>
    <% if @encyclopaedia_entry.encyclopaedia_entry_picture? %>
      <%= image_tag(
        @encyclopaedia_entry.encyclopaedia_entry_picture.url(:thumbnail)) %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :encyclopaedia_entry_picture %>
  </div>
  <div class="field">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :information, 'Information Box' %>
    <%= f.text_area :information, rows: 10 %>
    <p>
      (Use a <a href="/markdown-syntax-guide" target="_blank">Markdown
      description list</a> to format the encyclopaedia entry's information 
      box)
    </p>
  </div>
  <div class="field">
    <%= f.label :content, 'Content' %>
    <%= f.text_area :content, rows: 15, class: 'data_entry' %>
    <p>
      (You may use a <a href="/markdown-syntax-guide" target="_blank">limited
      subset of Markdown</a> to format the encyclopaedia entry's content)
    </p>
  </div>
  <div class="field">
    <label>Illustrations</label>
    <div class="ui segments">
      <%= f.fields_for :illustrations do |illustration_form| %>
        <div class="ui segment">
          <% if illustration_form.object.illustration_file_name.blank? %>
            <%= illustration_form.file_field :illustration %>
            <%= f.submit 'Upload and Save Encyclopaedia Entry', 
              name: :continue_editing, class: 'ui button' %>
          <% else %>
            <%= image_tag(
              illustration_form.object.illustration.url(:embedded)) %>
            <p>
              Filename: <%= illustration_form.object.illustration_file_name %>
            </p>
            <p>
              <%= link_to 'Popover Image',
                illustration_form.object.illustration.url(:popover) %>
            </p>
            <p>
              <%= link_to 'Original Image', 
                illustration_form.object.illustration.url %>
            </p>
            <button class="insert_tag ui button">Insert Markdown Tag</button>
          <% end %>
          <%= illustration_form.link_to_remove 'Remove illustration', 
            class: 'ui negative button' %>
        </div>
      <% end %>
      <div class="ui segment">
        <%= f.link_to_add 'Add illustration', :illustrations, 
          class: 'ui button' %>
      </div>
    </div>
  </div>
  <div class="field">
    <%= f.label :article_ids, 'Related Articles' %>
    <%= f.collection_select :article_ids, 
      Article.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.article_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :download_ids, 'Related Downloads' %>
    <%= f.collection_select :download_ids, 
      Download.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.download_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :link_ids, 'Related Links' %>
    <%= f.collection_select :link_ids, 
      Link.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.link_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :music_track_ids, 'Related Music Tracks' %>
    <%= f.collection_select :music_track_ids, 
      MusicTrack.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.music_track_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :picture_ids, 'Related Pictures' %>
    <%= f.collection_select :picture_ids, 
      Picture.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.picture_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :poem_ids, 'Related Poems' %>
    <%= f.collection_select :poem_ids, 
      Poem.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.poem_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :quiz_ids, 'Related Quizzes' %>
    <%= f.collection_select :quiz_ids, 
      Quiz.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.quiz_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :resource_ids, 'Related Resources' %>
    <%= f.collection_select :resource_ids, 
      Resource.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.resource_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :story_ids, 'Related Stories' %>
    <%= f.collection_select :story_ids, 
      Story.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.story_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :video_ids, 'Related Videos' %>
    <%= f.collection_select :video_ids, 
      Video.order(:name), :id, :name, 
      { selected: @encyclopaedia_entry.video_ids, include_blank: true }, 
      { multiple: true, class: 'ui fluid search dropdown' } %>
  </div>
  <% if policy(@encyclopaedia_entry).permitted_attributes.include? :publish %>
    <div class="field">
      <div class="ui toggle checkbox">
        <%= f.check_box :publish %> <%= f.label :publish, 'Publish?' %>
      </div>
    </div>
  <% end %>
  <div class="inline fields">
    <%= f.submit 'Save and View', class: 'ui primary button' %>
    <%= f.submit 'Save and Continue Editing', name: :continue_editing,
      class: 'ui button' %>
  </div>
<% end %>

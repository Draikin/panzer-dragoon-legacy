<%= nested_form_for @encyclopaedia_entry, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', target: @encyclopaedia_entry %>
  <fieldset>
    <%= f.label :category_id, 'Category' %>
    <%= f.collection_select :category_id,
      @categories,
      :id,
      :name,
      { include_blank: true },
      class: 'form-control'
    %>
  </fieldset>
  <fieldset>
    <%= f.label :contributor_profile_ids, 'Contributors' %>
    <%= f.collection_select :contributor_profile_ids,
      ContributorProfile.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.contributor_profile_ids,
      include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
    <small class="text-muted">
      Contributors are not publicly displayed next to encyclopaedia entries.
      This field is used to grant the contributor access to the unpublished
      encyclopaedia entry.
    </small>
  </fieldset>
  <fieldset>
    <%= f.label :encyclopaedia_entry_picture, 'Encyclopaedia Entry Picture' %>
    <% if @encyclopaedia_entry.encyclopaedia_entry_picture? %>
      <%= image_tag(
        @encyclopaedia_entry.encyclopaedia_entry_picture.url(:thumbnail)
      ) %>
      <p>File has already been uploaded. Replace file?</p>
    <% end %>
    <%= f.file_field :encyclopaedia_entry_picture, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, class: 'form-control' %>
  </fieldset>
  <fieldset>
    <%= f.label :information, 'Information Box' %>
    <%= f.text_area :information, rows: 10, class: 'form-control' %>
    <small class="text-muted">
      Use a <a href="/markdown-syntax-guide" target="_blank">Markdown
      description list</a> to format the encyclopaedia entry's information box.
    </small>
  </fieldset>
  <fieldset>
    <%= f.label :content, 'Content' %>
    <%= f.text_area :content, rows: 15, class: 'data_entry form-control' %>
    <small>
      You may use a <a href="/markdown-syntax-guide" target="_blank">limited
      subset of Markdown</a> to format the encyclopaedia entry's content.
    </small>
  </fieldset>
  <%= render partial: 'illustrations/fields',
    locals: { illustrations: @illustrations, f: f }
  %>
  <fieldset>
    <%= f.label :article_ids, 'Related Articles' %>
    <%= f.collection_select :article_ids,
      Article.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.article_ids, include_blank: true },
      { multiple: true, class: 'form-control' } %>
  </fieldset>
  <fieldset>
    <%= f.label :download_ids, 'Related Downloads' %>
    <%= f.collection_select :download_ids,
      Download.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.download_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <fieldset>
    <%= f.label :link_ids, 'Related Links' %>
    <%= f.collection_select :link_ids,
      Link.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.link_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
     %>
  </fieldset>
  <fieldset>
    <%= f.label :music_track_ids, 'Related Music Tracks' %>
    <%= f.collection_select :music_track_ids,
      MusicTrack.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.music_track_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <fieldset>
    <%= f.label :picture_ids, 'Related Pictures' %>
    <%= f.collection_select :picture_ids,
      Picture.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.picture_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
     %>
  </fieldset>
  <fieldset>
    <%= f.label :poem_ids, 'Related Poems' %>
    <%= f.collection_select :poem_ids,
      Poem.order(:name), :id, :name,
      { selected: @encyclopaedia_entry.poem_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <fieldset>
    <%= f.label :quiz_ids, 'Related Quizzes' %>
    <%= f.collection_select :quiz_ids,
      Quiz.order(:name), :id, :name,
      { selected: @encyclopaedia_entry.quiz_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <fieldset>
    <%= f.label :resource_ids, 'Related Resources' %>
    <%= f.collection_select :resource_ids,
      Resource.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.resource_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <fieldset>
    <%= f.label :story_ids, 'Related Stories' %>
    <%= f.collection_select :story_ids,
      Story.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.story_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <fieldset>
    <%= f.label :video_ids, 'Related Videos' %>
    <%= f.collection_select :video_ids,
      Video.order(:name),
      :id,
      :name,
      { selected: @encyclopaedia_entry.video_ids, include_blank: true },
      { multiple: true, class: 'form-control' }
    %>
  </fieldset>
  <% if policy(@encyclopaedia_entry).permitted_attributes.include? :publish %>
    <div class="checkbox">
      <label>
        <%= f.check_box :publish %> Publish?
      </label>
    </div>
  <% end %>
  <%= f.submit 'Save and View', class: 'btn btn-primary' %>
  <%= f.submit 'Save and Continue Editing',
    name: :continue_editing,
    class: 'btn btn-secondary'
  %>
<% end %>

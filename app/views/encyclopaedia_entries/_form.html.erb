<%= form_for @encyclopaedia_entry, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', target: @encyclopaedia_entry %>
  <div>
    <div>
      <%= f.label :category_id, 'Category*' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :category_id,
          @categories,
          :id,
          :name,
          { include_blank: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :contributor_profile_ids, 'Contributors' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :contributor_profile_ids,
          ContributorProfile.order(:name),
          :id,
          :name,
          {
            selected: @encyclopaedia_entry.contributor_profile_ids,
            include_blank: true
          },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%=
        f.label(
          :encyclopaedia_entry_picture, 'Encyclopaedia Entry Picture*'
        )
      %>
    </div>
    <div>
      <% if @encyclopaedia_entry.encyclopaedia_entry_picture? %>
        <%= image_tag(
          @encyclopaedia_entry.encyclopaedia_entry_picture.url(:thumbnail)) %>
        <p>File has already been uploaded. Replace file?</p>
      <% end %>
      <%= f.file_field :encyclopaedia_entry_picture %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :name, 'Name*' %>
    </div>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :information, 'Information Box*' %>
    </div>
    <div>
      <%= f.text_area :information, rows: 10 %>
      <p>
        (Use a <a href="/markdown-syntax-guide" target="_blank">Markdown
        description list</a> to format the encyclopaedia entry's information
        box)
      </p>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :content, 'Content*' %>
    </div>
    <div>
      <%= f.text_area :content, rows: 15, class: 'data_entry' %>
      <p>
        (You may use a <a href="/markdown-syntax-guide" target="_blank">limited
        subset of Markdown</a> to format the encyclopaedia entry's content)
      </p>
    </div>
  </div>
  <div>
    <label>Illustrations</label>
    <%= f.fields_for :illustrations do |illustration_fields| %>
      <%= render 'illustration_fields', f: illustration_fields %>
    <% end %>
    <p><%= link_to_add_association 'Add Illustration', f, :illustrations %></p>
  </div>
  <div>
    <div>
      <%= f.label :article_ids, 'Related Articles' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :article_ids,
          Article.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.article_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :download_ids, 'Related Downloads' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :download_ids,
          Download.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.download_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :link_ids, 'Related Links' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :link_ids,
          Link.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.link_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :music_track_ids, 'Related Music Tracks' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :music_track_ids,
          MusicTrack.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.music_track_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :picture_ids, 'Related Pictures' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :picture_ids,
          Picture.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.picture_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :poem_ids, 'Related Poems' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :poem_ids,
          Poem.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.poem_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :quiz_ids, 'Related Quizzes' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :quiz_ids,
          Quiz.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.quiz_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :resource_ids, 'Related Resources' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :resource_ids,
          Resource.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.resource_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :story_ids, 'Related Stories' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :story_ids,
          Story.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.story_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :video_ids, 'Related Videos' %>
    </div>
    <div>
      <%=
        f.collection_select(
          :video_ids,
          Video.order(:name),
          :id,
          :name,
          { selected: @encyclopaedia_entry.video_ids, include_blank: true },
          { multiple: true }
        )
      %>
    </div>
  </div>
  <% if policy(@encyclopaedia_entry).permitted_attributes.include? :publish %>
    <div>
      <%= f.check_box :publish %> <%= f.label :publish, 'Publish?' %>
    </div>
  <% end %>
  <div>
    <%= f.submit 'Save and View' %>
    <%= f.submit 'Save and Continue Editing', name: :continue_editing %>
  </div>
<% end %>

<%= nested_form_for @encyclopaedia_entry, :html => { :multipart => true } do |f| %>  
  <%= render "shared/error_messages", :target => @encyclopaedia_entry %>    
  <div>  
    <%= f.label :category_id, "Category" %><br />
    <%= f.collection_select :category_id, @categories, :id, :name, :include_blank => false %> 
  </div>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :encyclopaedia_entry_picture, "Encyclopaedia Entry Picture" %><br />
    <% if @encyclopaedia_entry.encyclopaedia_entry_picture? %>
    <%= image_tag @encyclopaedia_entry.encyclopaedia_entry_picture.url(:thumbnail) %><br />
      File has already been uploaded. Replace file?<br />
    <% end %>
    <%= f.file_field :encyclopaedia_entry_picture %>  
  </div>
  <div>
    <%= f.label :information, "Information Box" %><br />
    <%= f.text_area :information, :rows => 10 %>  
  </div>
  <div>
    <%= f.label :content, "Content" %><br />
    <%= f.text_area :content, :class => "data_entry" %>  
  </div>
  <div>
    <label>Illustrations</label>
    <%= f.fields_for :illustrations do |illustration_form| %>
      <div class="illustration">
      <% if illustration_form.object.illustration_file_name.blank? %>
        <%= illustration_form.file_field :illustration %>
      <% else %>
        <%= image_tag illustration_form.object.illustration.url(:embedded) %><br />
        <button class="insert_tag">Insert Tag</button><br />
        Filename: <%= illustration_form.object.illustration_file_name %><br />
        <%= link_to "Popover Image", illustration_form.object.illustration.url(:popover) %> |
        <%= link_to "Original Image", illustration_form.object.illustration.url %> |
      <% end %>
      <%= illustration_form.link_to_remove "Remove illustration" %><br />
      </div>
    <% end %>
    <p><%= f.link_to_add "Add illustration", :illustrations %></p>
  </div>
  <div>
    <label>Related Articles</label>
    <div class="scroll_checkboxes">
      <% for article in Article.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[article_ids][]", article.id, @encyclopaedia_entry.articles.include?(article) %> <%= article.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>  
  <div>
    <label>Related Downloads</label>
    <div class="scroll_checkboxes">
      <% for download in Download.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[download_ids][]", download.id, @encyclopaedia_entry.downloads.include?(download) %> <%= download.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Links</label>
    <div class="scroll_checkboxes">
      <% for link in Link.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[link_ids][]", link.id, @encyclopaedia_entry.links.include?(link) %> <%= link.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Music</label>
    <div class="scroll_checkboxes">
      <% for music_track in MusicTrack.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[music_track_ids][]", music_track.id, @encyclopaedia_entry.music_tracks.include?(music_track) %> <%= music_track.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Pictures</label>
    <div class="scroll_checkboxes">
      <% for picture in Picture.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[picture_ids][]", picture.id, @encyclopaedia_entry.pictures.include?(picture) %> <%= picture.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Poems</label>
    <div class="scroll_checkboxes">
      <% for poem in Poem.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[poem_ids][]", poem.id, @encyclopaedia_entry.poems.include?(poem) %> <%= poem.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Quizzes</label>
    <div class="scroll_checkboxes">
      <% for quiz in Quiz.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[quiz_ids][]", quiz.id, @encyclopaedia_entry.quizzes.include?(quiz) %> <%= quiz.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Resources</label>
    <div class="scroll_checkboxes">
      <% for resource in Resource.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[resource_ids][]", resource.id, @encyclopaedia_entry.resources.include?(resource) %> <%= resource.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Stories</label>
    <div class="scroll_checkboxes">
      <% for story in Story.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[story_ids][]", story.id, @encyclopaedia_entry.stories.include?(story) %> <%= story.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <label>Related Videos</label>
    <div class="scroll_checkboxes">
      <% for video in Video.order(:name) %>
        <label>
          <%= check_box_tag "encyclopaedia_entry[video_ids][]", video.id, @encyclopaedia_entry.videos.include?(video) %> <%= video.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <%= f.check_box :publish %> <%= f.label :publish, "Publish?" %>
  </div>
  <div>
    <%= f.submit "Save and View" %>
    <%= f.submit "Save and Continue Editing", name: :continue_editing %>
  </div>
<% end %>

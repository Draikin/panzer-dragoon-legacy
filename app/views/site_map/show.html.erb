<% title "Site Map" %>

<% if policy(CategoryGroup).new? || policy(Category).new? %>
  <div class="btn-group" role="group">
    <% if policy(CategoryGroup).new? %>
      <%= link_to new_category_group_path,
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'tag' %> New Category Group
      <% end %>
    <% end %>
    <% if policy(Category).new? %>
      <%= link_to new_category_path,
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'tag' %> New Category
      <% end %>
    <% end %>
  </div>
<% end %>

<ul class="list-group">
  <li class="list-group-item">
    <h2><%= link_to "Articles", articles_path %></h2>
    <%= render partial: 'categories',
      locals: { categories: @article_categories }
    %>
  </li>
  <li class="list-group-item">
    <h2><%= link_to "Downloads", downloads_path %></h2>
    <%= render partial: 'categories',
      locals: { categories: @download_categories }
    %>
  </li>
  <li class="list-group-item">
    <h2><%= link_to "Encyclopaedia", encyclopaedia_entries_path %></h2>
    <%= render partial: 'category_groups',
      locals: { category_groups: @encyclopaedia_entry_category_groups }
    %>
  </li>
  <li class="list-group-item">
    <h2><%= link_to "Links", links_path %></h2>
    <%= render partial: 'categories',
      locals: { categories: @link_categories }
    %>
  </li>
  <li class="list-group-item">
    <h2><%= link_to "Music", music_tracks_path %></h2>
    <%= render partial: 'category_groups',
      locals: { category_groups: @music_track_category_groups }
    %>
  </li>
  <li class="list-group-item">
    <h2><%= link_to "Pictures", pictures_path %></h2>
    <%= render partial: 'category_groups',
      locals: { category_groups: @picture_category_groups }
    %>
  </li>
  <li class="list-group-item">
    <h2><%= link_to "Poems", poems_path %></h2>
  </li>
  <li class="list-group-item">

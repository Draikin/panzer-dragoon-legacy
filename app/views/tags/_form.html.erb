<%= form_for @tag do |f| %>  
  <%= render "shared/error_messages", :target => @tag %>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description %>  
  </div>
  <div>
    <%= f.submit %>  
  </div>
<% end %>
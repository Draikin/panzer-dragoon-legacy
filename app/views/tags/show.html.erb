<% title @tag.name %>

<% if can? :manage, @tag %>
  <ul class="administration">
    <li><%= link_to 'Edit Tag', edit_tag_path(@tag) %></li>
    <li><%= link_to 'Delete Tag', @tag, :confirm => 'Are you sure you want to delete this tag?', :method => :delete %></li>
  </ul>
<% end %>

<p><%= @tag.description %></p>

<% unless @articles.empty? %>
  <h2>Articles</h2>
  <% @articles.each do |article| %>
    <div>
      <p><%= link_to article.name, article_path(article) %></p>
    </div>
  <% end %>
<% end %>


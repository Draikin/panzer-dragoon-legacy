<% title @story.name %>
<% description @story.description %>

<% if !@story.publish %>
  <p class="unpublished">Unpublished</p>
<% elsif !@story.category.publish %>
  <p class="unpublished">Published in Unpublished Category</p>
<% end %>

<% if policy(@story).new? or policy(@story).edit? or policy(@story).destroy? %>
  <div class="ui four item stackable menu">
    <% if policy(@story).new? %>
      <%= link_to new_story_path(category: @story.category), class: 'item' do %>
        <i class="write icon"></i> New Story
      <% end %>
    <% end %>
    <% if policy(@story).edit? %>
      <%= link_to new_chapter_path(story: @story), class: 'item' do %>
        <i class="write icon"></i> New Chapter
      <% end %>
      <%= link_to edit_story_path(@story), class: 'item' do %>
        <i class="edit icon"></i> Edit Story
      <% end %>
    <% end %>
    <% if policy(@story).destroy? %>
      <%= link_to @story, data: { confirm: 'Are you sure you want to delete ' +
        'this story? ALL chapters belonging to this story will be deleted.' }, 
        method: :delete, class: 'item' do %>
        <i class="trash icon"></i> Delete Story
      <% end %>
    <% end %>
  </div>
<% end %>

<h2>Written By:</h2>
<ul>
  <% @story.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<%= raw illustrated_markdown_to_html @story.id, "Story", @story.content %>

<% if @story.chapters.count > 0 %>
  <h2>Table of Contents:</h2>
  <ul>
  <% @story.chapters.where(chapter_type: :prologue).order(:number).
    each do |prologue| %>
    <li>
      <%= link_to prologue.name, chapter_path(prologue) %>
    </li>
  <% end %>
  <% @story.chapters.where(chapter_type: :regular_chapter).order(:number).
    each do |regular_chapter| %>
    <li>
      <% unless regular_chapter.name.blank? %>
        <%= link_to "Chapter " + regular_chapter.number.to_s + ": " +
          regular_chapter.name, chapter_path(regular_chapter) %>
      <% else %>
        <%= link_to "Chapter " + regular_chapter.number.to_s,
          chapter_path(regular_chapter) %>
      <% end %>
    </li>
  <% end %>
  <% @story.chapters.where(chapter_type: :epilogue).order(:number).
    each do |epilogue| %>
    <li>
      <%= link_to epilogue.name, chapter_path(epilogue) %>
    </li>
  <% end %>
  </ul>
<% end %>

<%= render partial: 'shared/related_encyclopaedia_entries' %>

<p class="links">
  <%= link_to 'Stories', stories_path %> |
  <%= link_to @story.category.name, category_path(@story.category) %>
</p>

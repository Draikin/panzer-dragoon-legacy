<% title @story.name %>
<% description @story.description %>

<% if !@story.publish %>
  <p class="unpublished">Unpublished</p>
<% elsif !@story.category.publish %>
  <p class="unpublished">Published in Unpublished Category</p>
<% end %>

<% if policy(@story).new? or policy(@story).edit? or policy(@story).destroy? 
  or policy(Chapter).new? %>
  <ul class="administration">
    <% if policy(@story).new? %>
      <li>
        <%= link_to 'New Story', new_story_path(category: @story.category) %>
      </li>
    <% end %>
    <% if policy(Chapter).new? %>
      <li><%= link_to 'New Chapter', new_chapter_path(story: @story) %></li>
    <% end %>
    <% if policy(@story).edit? %>
      <li><%= link_to 'Edit Story', edit_story_path(@story) %></li>
    <% end %>
    <% if policy(@story),destroy? %>
      <li>
        <%= link_to 'Delete Story', @story, data: {
          confirm: 'Are you sure you want to delete this story? ALL chapters " +
            "belonging to this story will be deleted.' },
          method: :delete %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Written By:</h2>
<ul>
  <% @story.contributor_profiles.each do |contributor_profile| %>
    <li><%= link_to contributor_profile.name, contributor_profile %></li>
  <% end %>
</ul>

<%= raw illustrated_markdown_to_html @story.id, "Story", @story.content %>

<% if @chapter_count > 0 %>
  <h2>Table of Contents:</h2>
  <ul>
  <% @prologues.each do |prologue| %>
    <li>
      <%= link_to prologue.name, chapter_path(prologue) %>
      <% unless prologue.publish %>
         - <span class="unpublished">Unpublished</span>
      <% end %>
    </li>
  <% end %>
  <% @regular_chapters.each do |regular_chapter| %>
    <li>
      <% unless regular_chapter.name.blank? %>
        <%= link_to "Chapter " + regular_chapter.number.to_s + ": " +
          regular_chapter.name, chapter_path(regular_chapter) %>
      <% else %>
        <%= link_to "Chapter " + regular_chapter.number.to_s,
          chapter_path(regular_chapter) %>
      <% end %>
      <% unless regular_chapter.publish %>
        - <span class="unpublished">Unpublished</span>
      <% end %>
    </li>
  <% end %>
  <% @epilogues.each do |epilogue| %>
    <li>
      <%= link_to epilogue.name, chapter_path(epilogue) %>
      <% unless epilogue.publish %>
         - <span class="unpublished">Unpublished</span>
      <% end %>
    </li>
  <% end %>
  </ul>
<% end %>

<%= render partial: 'shared/related_encyclopaedia_entries' %>

<p class="links">
  <%= link_to 'Stories', stories_path %> |
  <%= link_to @story.category.name, category_path(@story.category) %>
</p>

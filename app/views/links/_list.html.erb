<% if @links %>
  <div class="ui very relaxed list">
    <% @links.each do |link| %>
      <div class="item">
        <div class="content">
          <div class="header">
            <h2><%= link_to link.name, link.url %></h2>
          </div>
          <% if policy(link).edit? or policy(link).destroy? %>
            <div class="ui two item stackable menu">
              <% if policy(link).edit? %>
                <%= link_to edit_link_path(link), class: 'item' do %>
                  <i class="configure icon"></i> Edit Link
                <% end %>
              <% end %>
              <% if policy(link).destroy? %>
                <%= link_to link, data: {
                  confirm: 'Are you sure you want to delete this link?' },
                  method: :delete, class: 'item' do %>
                  <i class="trash icon"></i> Delete Link
                <% end %>
              <% end %>
            </div>
          <% end %>
          <% if link.contributor_profiles.count > 0 %>
            <h3>Maintained By:</h3>
            <ul>
              <% link.contributor_profiles.each do |contributor_profile| %>
                <li>
                  <%= link_to contributor_profile.name, contributor_profile %>
                </li>
              <% end %>
            </ul>
          <% end %>
          <div class="description">
            <p><%= link.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @links %>
<% end %>

<% unless @links.empty? %>
  <div id="resources">
    <% @links.each do |link| %>
      <div class="resource">
        <div class="details">
          <h2><%= link_to link.name, link.url %></h2>
          <% if can? :update, link %>
            <ul class="administration">
              <li><%= link_to 'Edit Link', edit_link_path(link) %></li>
              <li><%= link_to 'Delete Link', link, :confirm => 'Are you sure you want to delete this link?', :method => :delete %></li>
            </ul>
          <% end %>
          <% if link.dragoons.count > 0 %>
            <h3>Maintained By:</h3>
            <ul>
              <% link.dragoons.each do |dragoon| %>
                <li><%= link_to dragoon.name, dragoon %></li>
              <% end %>
            </ul>
          <% end %>
          <% if can? :manage, Tag %>
            <% if link.tags.count > 0 %>  
              <h3>Tags:</h3>
              <ul>
                <% link.tags.each do |tag| %>
                  <li><%= link_to tag.name, tag %></li>
                <% end %>
              </ul>
            <% end %>
          <% end %>
          <p><%= link.description %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<%= paginate @links %>
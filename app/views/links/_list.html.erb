<% if @links %>
  <div id="resources">
    <% @links.each do |link| %>
      <div class="resource">
        <div class="details">
          <h2><%= link_to link.name, link.url %></h2>
          <% if policy(link).edit? && policy(link).destroy? %>
            <ul class="administration">
              <li><%= link_to 'Edit Link', edit_link_path(link) %></li>
              <li><%= link_to 'Delete Link', link, data: { confirm: 'Are you sure you want to delete this link?' }, method: :delete %></li>
            </ul>
          <% end %>
          <% if link.dragoons.count > 0 %>
            <h3>Maintained By:</h3>
            <ul>
              <% link.dragoons.each do |dragoon| %>
                <li><%= link_to dragoon.name, dragoon %></li>
              <% end %>
            </ul>
          <% end %>
          <p><%= link.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @links %>
<% end %>

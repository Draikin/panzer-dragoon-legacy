<% if @dragoon %>
  <% title "#{@dragoon.name}'s Links" %>
<% else %>
  <% title "Links" %>
<% end %>

<% if policy(Link).new? %>
  <ul class="administration">
    <li><%= link_to 'New Link', new_link_path %></li>
  </ul>
<% end %>

<% unless params[:dragoon_id] %>
  <% if @categories %>
    <h2>Link Categories</h2>
    <ul>
      <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, category %>
          <% unless category.publish %>
             - <span class="unpublished">Unpublished</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <% if @links %>
    <h2>All Links</h2>
  <% end %>
<% end %>

<%= render 'list' %>

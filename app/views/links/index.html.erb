<% if @contributor_profile %>
  <% title "#{@contributor_profile.name}'s Links" %>
<% else %>
  <% title "Links" %>
<% end %>

<% if policy(Category).new? || policy(Link).new? %>
  <div class="btn-group" role="group">
    <% if policy(Category).new? %>
      <%= link_to new_category_path(category_type: :link),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'tag' %> New Category
      <% end %>
    <% end %>
    <% if policy(Link).new? %>
      <%= link_to new_link_path,
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'link' %> New Link
      <% end %>
    <% end %>
  </div>
<% end %>

<% unless params[:contributor_profile_id] %>
  <% if @categories.present? %>
    <h2>Link Categories</h2>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item">
          <%= link_to category.name, category %>
          <% unless category.publish %>
            <span class="label label-warning">Unpublished</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <% if @links.present? %>
    <h2>All Links</h2>
  <% end %>
<% end %>

<%= render 'list' %>

<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'Home', root_url %></li>
  <li class="breadcrumb-item active">Links</li>
</ol>

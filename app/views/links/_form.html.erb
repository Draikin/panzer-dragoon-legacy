<%= form_for @link do |f| %>
  <%= render "shared/error_messages", target: @link %>
  <div>
    <%= f.label :category_id, "Category" %><br />
    <%= f.collection_select :category_id, @categories, :id, :name,
      include_blank: false %>
  </div>
  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :url, "URL" %>
    <%= f.text_field :url %>
  </div>
  <div>
    <%= f.check_box :partner_site %>
    <%= f.label :partner_site, "Partner Site?" %>
  </div>
  <div>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, rows: 5 %>
  </div>
  <label>Contributors</label>
  <div class="scroll_checkboxes">
    <% for contributor_profile in ContributorProfile.order(:name) %>
      <label>
        <%= check_box_tag "link[contributor_profile_ids][]", 
          contributor_profile.id, 
          @link.contributor_profiles.include?(contributor_profile) %>
        <%= contributor_profile.name %>
     </label>
     <br />
    <% end %>
  </div>
  <div>
    <label>Related Encyclopaedia Entries</label>
    <div class="scroll_checkboxes">
      <% for encyclopaedia_entry in EncyclopaediaEntry.order(:name) %>
        <label>
          <%= check_box_tag "link[encyclopaedia_entry_ids][]",
            encyclopaedia_entry.id,
            @link.encyclopaedia_entries.include?(encyclopaedia_entry) %>
          <%= encyclopaedia_entry.name %>
        </label>
        <br />
      <% end %>
    </div>
  </div>
  <div>
    <%= f.submit "Save" %>
    <%= f.submit "Save and Continue Editing", name: :continue_editing %>
  </div>
<% end %>

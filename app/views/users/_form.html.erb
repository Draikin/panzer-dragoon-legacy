<%= form_for @user do |f| %>
  <%= render 'shared/error_messages', target: @user %>
  <div>
    <div>
      <%= f.label :email, 'Email*' %>
    </div>
    <div>
      <%= f.text_field :email %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :contributor_profile_id, 'Contributor Profile*' %>
    </div>
    <div>
      <%= f.collection_select :contributor_profile_id,
        @contributor_profiles,
        :id,
        :name,
        { include_blank: true }
      %>
    </div>
  </div>
  <div>
    <%= f.check_box :administrator %>
    <%= f.label :administrator, 'Administrator? (Be Careful!)' %>
  </div>
  <div>
    <%= f.submit 'Save' %>
  </div>
<% end %>

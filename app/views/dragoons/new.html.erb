<% title "Register" %>
  
<%= form_for @dragoon do |f| %>  
  <%= render "shared/error_messages", :target => @dragoon %>     
  <div>
    <%= f.label :name %><br />  
    <%= f.text_field :name %>  
  </div>
  <div>
    <%= f.label :email_address %><br />  
    <%= f.email_field :email_address %>  
  </div>
  <div>
    <%= f.label :password %><br />  
    <%= f.password_field :password %>  
  </div>
  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>  
  </div>
  <div>
    <%= check_box_tag :stay_logged_in %> <%= label_tag :stay_logged_in, "Stay logged in?" %>
  </div>
  <div>
    <%= f.submit "Register" %>  
  </div>
<% end %>
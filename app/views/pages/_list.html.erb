<% if @pages %>
  <div class="ui very relaxed list">
    <% @pages.each do |page| %>
      <div class="item">
        <div class="content">
          <div class="header">
            <h2><%= link_to page.name, page %></h2>
          </div>
          <% unless page.publish %>
            <p class="unpublished">Unpublished</p>
          <% end %>
          <div class="description">
            <p><%= truncated_text page.content %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @pages %>
<% end %>

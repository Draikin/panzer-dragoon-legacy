<%= form_for @news_entry do |f| %>  
  <%= render "shared/error_messages", :target => @news_entry %>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div>  
    <%= f.label :content, "Content" %><br />
    <%= render 'shared/wysiwym_basic_buttons' %>
    <%= f.text_area :content, :class => "data_entry" %>  
  </div>
  <div>
    <%= f.check_box :publish %> <%= f.label :publish, "Publish?" %><br />
    (This news entry will be automatically posted to Twitter the first time that it is published. The tweet must be manually copied and pasted to Facebook and Google+.)
  </div>
  <div>
    <%= f.submit %>  
  </div>
<% end %>
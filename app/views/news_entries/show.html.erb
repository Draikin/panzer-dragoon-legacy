<% title @news_entry.name %>

<% if policy(@news_entry).edit? && policy(@news_entry).destroy? %>
  <ul class="administration">
    <li><%= link_to 'Edit News Entry', edit_news_entry_path(@news_entry) %></li>
    <li><%= link_to 'Delete News Entry', @news_entry, :confirm => 'Are you sure you want to delete this news entry?', :method => :delete %></li>
  </ul>
<% end %>

<div id="resources">
  <div class="resource">
    <div class="comment_thumbnail">
      <% if @news_entry.dragoon.avatar_file_name.blank? %>
        <%= image_tag("default-avatar.jpg") %>
      <% else %>
        <%= image_tag @news_entry.dragoon.avatar.url(:thumbnail) %><br />
      <% end %>
    </div>
    <div class="comment_details">
      <p class="name_and_date">Published by <%= link_to @news_entry.dragoon.name, @news_entry.dragoon %>
        <% if @news_entry.publish %>
          <%= local_time_ago @news_entry.published_at %>.
        <% else %>
          - <span class="unpublished">Unpublished</span>
        <% end %>
      </p>
      <%= raw news_entry_markdown_to_html @news_entry.content %>
    </div>
  </div>
</div>
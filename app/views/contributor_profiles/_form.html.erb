<%= form_for @contributor_profile, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', target: @contributor_profile %>
  <div>
    <div>
      <%= f.label :name, 'Name*' %>
    </div>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :description, 'Description' %>
    </div>
    <div>
      <%= f.text_area :description, rows: 3 %>
    </div>
  </div>
  <div>
    <div>
      <%=
        f.label(
          :email_address,
          'Email Address (only administrators can see this, recorded in case ' \
            'we need to contact the contributor)'
        )
      %>
    </div>
    <div>
      <%= f.email_field :email_address %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :discourse_username, 'Discourse Username' %>
    </div>
    <div>
      <%= f.text_field :discourse_username %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :avatar, 'Avatar' %>
    </div>
    <div>
      <% if @contributor_profile.avatar? %>
        <%= image_tag @contributor_profile.avatar.url(:thumbnail) %>
        <p>File has already been uploaded. Replace file?</p>
      <% end %>
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :website, 'Website' %>
    </div>
    <div>
      <%= f.text_field :website %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :facebook_username, 'Facebook Username' %>
    </div>
    <div>
      <%= f.text_field :facebook_username %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :twitter_username, 'Twitter Username' %>
    </div>
    <div>
      <%= f.text_field :twitter_username %>
    </div>
  </div>
  <% if policy(@contributor_profile).permitted_attributes.include? :publish %>
    <div>
      <%= f.check_box :publish %> <%= f.label :publish, 'Publish?' %>
    </div>
  <% end %>
  <div>
    <%= f.submit 'Save and View' %>
    <%= f.submit 'Save and Continue Editing', name: :continue_editing %>
  </div>
<% end %>

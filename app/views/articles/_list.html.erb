<% if @articles %>
  <ul class="media-list">
    <% @articles.each do |article| %>
      <li class="media">
        <div class="media-body">
          <h2 class="media-heading"><%= link_to article.name, article %></h2>
          <% unless article.publish %>
            <span class="label label-warning">Unpublished</span>
          <% end %>
          <p><%= article.description %></p>
        </div>
      </li>
    <% end %>
  </div>
  <%= paginate @articles %>
<% end %>

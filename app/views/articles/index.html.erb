<% if @contributor_profile %>
  <% title "#{@contributor_profile.name}'s Articles" %>
<% elsif params[:filter] == 'draft' %>
  <% title "Draft Articles" %>
<% else %>
  <% title "Articles" %>
<% end %>

<% if policy(Category).new? || policy(Article).new? %>
  <div class="btn-group" role="group">
    <% if policy(Category).new? %>
      <%= link_to new_category_path(category_type: :article),
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'tag' %> New Category
      <% end %>
    <% end %>
    <% if policy(Article).new? %>
      <%= link_to new_article_path,
        { class: 'btn btn-secondary', role: 'button' } do %>
        <%= fa_icon 'pencil' %> New Article
      <% end %>
    <% end %>
  </div>
<% end %>

<% unless params[:contributor_profile_id] || params[:filter] %>
  <% if @categories.present? %>
    <h2>Article Categories</h2>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item">
          <%= link_to category.name, category %>
          <% unless category.publish %>
            <span class="label label-warning">Unpublished</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <% if @articles.present? %>
    <h2>All Articles</h2>
  <% end %>
<% end %>

<%= render 'list' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_url %></li>
  <li class="active">Articles</li>
</ol>

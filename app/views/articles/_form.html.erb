<%= nested_form_for @article, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', target: @article %>
  <%= render 'shared/form/category', categories: @categories, f: f %>
  <%= render 'shared/form/contributors', model: @article, f: f %>
  <%= render 'shared/form/name', f: f %>
  <%= render 'shared/form/description', f: f %>
  <%= render 'shared/form/content', f: f %>
  <%= render 'shared/form/illustrations', illustrations: @illustrations, f: f %>
  <%= render 'shared/form/related_encyclopaedia_entries',
    model: @article,
    f: f
  %>
  <%= render 'shared/form/publish', model: @article, f: f %>
  <%= render 'shared/form/save_buttons', f: f %>
<% end %>

<% title @project.name %>

<ul class="administration">
  <li><%= link_to 'New Discussion', new_project_project_discussion_path(@project) %></li>
  <li><%= link_to 'Tasks', project_project_tasks_path(@project) %></li>
  <li><%= link_to 'Members', project_project_members_path(@project) %></li>
  <% if can? :manage, @project %>
    <li><%= link_to 'Edit Project', edit_project_path(@project) %></li>
    <li><%= link_to 'Delete Project', @project, :confirm => 'Are you sure you want to delete this project? ALL items belonging to this project will be deleted.', :method => :delete %></li>
  <% end %>
</ul>

<p><%= @project.description %></p>

<% unless @project.project_discussions.empty? %>
  <h2>Discussions</h2>
  <%= render 'project_discussions/list' %>
<% end %>
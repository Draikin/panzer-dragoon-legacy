<%= form_for @forum, :html => { :multipart => true } do |f| %>
  <%= render "shared/error_messages", :target => @forum %>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
	<div>
    <%= f.label :number, "Number" %><br /> 
    <%= f.text_field :number %>
  </div>
  <div>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div>
   	<%= f.label :forum_picture, "Forum Picture" %><br />
	  <% if @forum.forum_picture? %>
	    <%= image_tag @forum.forum_picture.url(:thumbnail) %><br />
	    File has already been uploaded. Replace file?<br />
	  <% end %>
	  <%= f.file_field :forum_picture %>
  </div>
  <div>
	  <%= f.submit %>
	</div>
<% end %>
<% if params[:filter] == 'draft' %>
  <% title "Draft Categories" %>
<% else %>
  <% title "Categories" %>
<% end %>

<% if policy(CategoryGroup).new? || policy(Category).new? %>
  <div class="btn-group" role="group">
    <% if policy(CategoryGroup).new? %>
      <%= link_to 'New Category Group',
        new_category_group_path,
        { class: 'btn btn-secondary', role: 'button' }
      %>
    <% end %>
    <% if policy(Category).new? %>
      <%= link_to 'New Category',
        new_category_path,
        { class: 'btn btn-secondary', role: 'button' }
      %>
    <% end %>
  </div>
<% end %>

<%= render 'list' %>

<% if params[:filter] == 'draft' %>
  <% title "Draft Categories" %>
<% else %>
  <% title "Categories" %>
<% end %>

<% if policy(CategoryGroup).new? or policy(Category).new? %>
  <div class="ui two item stackable menu">
    <% if policy(CategoryGroup).new? %>
      <%= link_to new_category_group_path, class: 'item' do %>
        <i class="tag icon"></i> New Category Group
      <% end %>
    <% end %>
    <% if policy(Category).new? %>
      <%= link_to new_category_path, class: 'item' do %>
        <i class="tag icon"></i> New Category
      <% end %>
    <% end %>
   </div>
<% end %>

<%= render 'list' %>

<div class="ui breadcrumb">
  <%= link_to "Home", root_url, class: 'section' %>
  <div class="divider"> / </div>
  <div class="active section">Categories</div>
</div>

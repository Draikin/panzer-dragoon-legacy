<h2>Videos in this Category</h2>
<% if policy(Video).new? %>
  <%= link_to new_video_path(category: @category),
    { class: 'btn btn-secondary', role: 'button' } do %>
    <%= fa_icon('upload') %> New Video
  <% end %>
<% end %>
<%= render 'videos/list' %>
<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'Home', root_url %></li>
  <li class="breadcrumb-item"><%= link_to 'Videos', videos_path %></li>
  <li class="breadcrumb-item active"><%= @category.name %></li>
</ol>

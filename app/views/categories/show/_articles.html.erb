<h2>Articles in this Category</h2>
<% if policy(Article).new? %>
  <%= link_to new_article_path(category: @category),
    { class: 'btn btn-secondary', role: 'button' } do %>
    <%= fa_icon('pencil') %> New Article
  <% end %>
<% end %>
<%= render 'articles/list' %>
<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'Home', root_url %></li>
  <li class="breadcrumb-item"><%= link_to 'Articles', articles_path %></li>
  <li class="breadcrumb-item active"><%= @category.name %></li>
</ol>

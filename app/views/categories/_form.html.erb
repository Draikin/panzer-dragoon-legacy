<%= form_for @category do |f| %>
  <%= render 'shared/error_messages', target: @category %>
  <fieldset class="form-group">
    <%= f.label :category_type, 'Category Type' %>
    <%= f.collection_select :category_type,
      Category::CATEGORY_TYPES,
      :to_s,
      :titleize,
      {},
      class: 'form-control'
    %>
  </fieldset>
  <fieldset>
    <%= f.label :category_group_id, 'Category Group' %>
    <%= f.collection_select :category_group_id,
      @category_groups,
      :id,
      :name,
      { include_blank: true },
      class: 'form-control'
    %>
  </fieldset>
  <%= render partial: 'shared/form/name', locals: { f: f } %>
  <%= render partial: 'shared/form/description', locals: { f: f } %>
  <%= render partial: 'shared/form/publish',
    locals: { model: @category, f: f }
  %>
  <%= render partial: 'shared/form/save_buttons', locals: { f: f } %>
<% end %>

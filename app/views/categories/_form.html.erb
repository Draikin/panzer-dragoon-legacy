<%= form_for @category, html: { class: 'ui form' } do |f| %>
  <%= render 'shared/error_messages', target: @category %>
  <div class="field">
    <%= f.label :category_type, 'Category Type' %>
    <%= f.collection_select :category_type, Category::CATEGORY_TYPES,
      :to_s, :titleize, {}, { class: 'ui search selection dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :category_group_id, 'Category Group' %>
    <%= f.collection_select :category_group_id, @category_groups, :id, :name,
      { include_blank: true }, { class: 'ui search selection dropdown' } %>
  </div>
  <div class="field">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Description' %>
    <%= f.text_area :description, rows: 3 %>
  </div>
  <div class="field">
    <div class="ui toggle checkbox">
      <%= f.check_box :publish %> <%= f.label :publish, 'Publish?' %>
    </div>
  </div>
  <div class="inline fields">
    <%= f.submit 'Save and View', class: 'ui primary button' %>
    <%= f.submit 'Save and Continue Editing', name: :continue_editing,
      class: 'ui button' %>
  </div>
<% end %>

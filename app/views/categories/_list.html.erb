<% if @categories %>
  <div id="resources">
    <% @categories.each do |category| %>
      <div class="resource">
        <div class="details">
          <h2><%= link_to category.name, category %></h2>
          <% unless category.publish == true %>
            <p class="unpublished">Unpublished</p>
          <% end %>
          <p><%= category.description %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

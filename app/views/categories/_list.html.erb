<% if @categories %>
  <div class="ui very relaxed list">
    <% @categories.each do |category| %>
      <div class="item">
        <div class="content">
          <div class="header">
            <h2><%= link_to category.name, category %></h2>
          </div>
          <% unless category.publish == true %>
            <p class="unpublished">Unpublished</p>
          <% end %>
          <div class="description">
            <p><%= category.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

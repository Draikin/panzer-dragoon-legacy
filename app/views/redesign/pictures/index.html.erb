<% if @contributor_profile %>
  <% title "#{@contributor_profile.name}'s Pictures" %>
<% else %>
  <% title 'Pictures' %>
<% end %>

<% unless params[:contributor_profile_id] %>
  <% if @category_groups.present? %>
    <%=
      render(
        partial: 'redesign/shared/category_groups',
        locals: { category_groups: @category_groups }
      )
    %>
  <% end %>
  <% if @pictures.present? %>
    <%= render 'list' %>
  <% end %>
<% end %>

<div class="media">
  <%= link_to(
    show_picture(
      news_entry,
      'news_entry_picture',
      :thumbnail
    ),
    news_entry,
    class: 'mr-3'
  ) %>
  <div class="media-body">
    <h5 class="mt-0"><%= link_to news_entry.name, news_entry %></h5>
    <p>
      <% if news_entry.publish %>
        Published by
      <% else %>
        Posted by
      <% end %>
      <%=
        link_to(
          news_entry.contributor_profile.name,
          news_entry.contributor_profile
        )
      %>
      <% if news_entry.publish %>
        <%= local_time_ago news_entry.published_at %>.
      <% else %>
        <span class="badge badge-warning">Draft</span>
      <% end %>
    </p>
    <%= raw news_entry_markdown_to_html news_entry.content %>
  </div>
</div>

<% if categories.present? %>
  <ul class="list-group">
    <% categories.each do |category| %>
      <% if policy(category).show? %>
        <li class="list-group-item">
          <%= link_to category.name, category %>
          <% unless category.publish %>
            <span class="badge badge-warning">Draft</span>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>

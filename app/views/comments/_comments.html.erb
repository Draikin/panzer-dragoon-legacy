<% @comments.each do |comment| %>  
  <div class="resource">
    <div class="comment_thumbnail">
      <% if comment.dragoon.avatar_file_name.blank? %>
        <%= image_tag("default-avatar.jpg") %>
      <% else %>
        <%= image_tag comment.dragoon.avatar.url(:thumbnail) %><br />
      <% end %>
    </div>
    <div class="comment_details">
      <p class="name_and_date">Posted by <%= link_to comment.dragoon.name, dragoon_path(comment.dragoon) %> <%= time_ago_in_words(comment.created_at) %> ago.
        <% if @current_dragoon %>
          <span class="unviewed">
            <% if @comments_unviewed[comment.id] %>
              <%= "New!" %>
            <% end %>
          </span>
        <% end %>
      </p>
      <%= raw markdown_to_html comment.message %>
      <% if can? :manage, comment %>
        <ul class="comment_administration">
          <li><%= link_to 'Edit Comment', edit_comment_path(comment) %></li>
          <li><%= link_to 'Delete Comment', comment, :confirm => 'Are you sure you want to delete this comment?', :method => :delete %></li>
        </ul>
      <% end %>
    </div>
  </div>
<% end %>

/* 
*= require_self 
*= require_tree . 
*/

$link-colour-1: #B5B7B4;
$link-colour-2: #A09682;
$main-text-colour: #EEEEEE;
$main-font-size: 13px;
$good-text: #00FF44;
$alert-text: #FFAA00;
$bad-text: #FF2200;
$border-properties: 1px solid #333333;
$header-background-colour: #111111;
$input-background-colour: #343434;
$banner: random_banner();

@mixin caption-properties {
  font-size: 11px;
  margin-top: 0;
  margin-left: 9px;
  width: 280px;
}

@mixin gradients($direction, $colour-1, $colour-2) {
  background: -webkit-linear-gradient($direction, $colour-1, $colour-2);
  background: -moz-linear-gradient($direction, $colour-1, $colour-2);
  background: -o-linear-gradient($direction, $colour-1, $colour-2);
  background: -ms-linear-gradient($direction, $colour-1, $colour-2);
  background: linear-gradient($direction, $colour-1, $colour-2);
}

a {
  color: $link-colour-1;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

body {
  font-family: "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif;
  font-size: 12px;
  color: $main-text-colour;
  background-color: #535353;
  @include gradients(top, #434343, #535353); 
}

div#overall {
  width: 950px;
  margin: 0 auto;
  border: $border-properties;
  border-radius: 10px;
}

div#header {
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom: $border-properties;
  width: 950px;
  background-color: $header-background-colour;
  background-repeat: no-repeat;
  height: 100px;
}

div#header img#logo {
  border: 0;
}

div#banner {
  width: 950px;
  height: 180px;
  background-image: url(<%= asset_path 'banner.jpg' %>);
  border-bottom: $border-properties;
}

div#navigation {
  clear: both;
  width: 950px;
  text-align: right;
  height: 50px;
  background-color: $header-background-colour;
  border-bottom: $border-properties;
}

div#navigation label {
  float: left;
  color: white;
  padding: 15px;
}

div#navigation input {
  float: left;
  width: 150px;
  color: black;
  margin-top: 15px;
  background-color: white;
  height: 0px;
}

div#navigation ul {
  margin: 0;
  padding: 15px;
}

div#navigation li {
  display: inline;
  padding: 10px;
  font-size: 14px;
  color: white;
  text-shadow: 2px 2px 2px #252525;
}

div#navigation a {
  color: $main-text-colour;
  text-decoration: none;
}

div#navigation a:hover {
  color: $link-colour-1;
}

div#main {
  width: 950px;
  background-color: #3f3f3f;
  overflow: auto;
  border-bottom: $border-properties;
}

div#aside {
  margin-top: 25px;
  margin-left: 25px;
  margin-bottom: 25px;
  width: 248px;
  float: left;
  border: $border-properties;
  border-radius: 10px;
  background-color: #343434;
  @include gradients(right, #343434, #454545); 
  padding-bottom: 10px;
}

div#aside h3 {
  padding-top: 10px;
  padding-left: 20px;
  text-shadow: 2px 2px 2px $header-background-colour;
}

div#aside ul {
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 0px;
  list-style-type: none;
  line-height: 1.5;
}

div#content {
  font-size: $main-font-size;
  width: 625px;
  margin-left: 300px;
  line-height: 2;
  text-align: justify;
  padding-top: 25px;
  padding-bottom: 25px;
  overflow: auto;
}

div#content h1 {
  margin-top: -10px;
  font-size: 19px;
  text-shadow: 2px 2px 2px #252525;
}

div#content a {
  color: $link-colour-2;
}

ul.administration {
  padding: 0;
}

ul.administration li {
  display: inline;
  padding-right: 5px;
}

ul.comment_administration {
  padding: 0;
  margin-bottom: 0;
}

ul.comment_administration li {
  display: inline;
  padding-right: 5px;
}

ul#contributors {
  padding: 0;
}

ul#contributors li {
  display: inline;
  padding-right: 5px;	
}

div#content p#description {
  font-size: 16px;
}

div#content h2 {
  font-size: 15px;
  clear: both;
  text-shadow: 2px 2px 2px #252525;
}

div#content h3 {
  font-size: 13px;
  clear: both;
  font-weight: bold;
}

div#content hr {
  text-align: center;
  height: 10px;
  width: 400px;
  border-radius: 5px;
  border: $border-properties;
  background-color: #343434;
  margin-top: 25px;
  margin-bottom: 25px;
}

div.left {
  border-radius: 10px;
  width: 298px;
  text-align: center;
  float: left;
  margin-top: 10px;
  margin-right: 25px;
  margin-bottom: 25px;
  border: $border-properties;
  background-color: #343434;
  @include gradients(bottom, #343434, #454545);
  padding-bottom: 10px;
}

div.left img {
  padding: 9px;
  border: 0;
}

div.left p {
  @include caption-properties;
}

div.right {
  border-radius: 10px;
  width: 298px;
  text-align: center;
  float: right;
  margin-top: 10px;
  margin-left: 25px;
  margin-bottom: 25px;
  border: $border-properties;
  background-color: #343434;
  @include gradients(bottom, #343434, #454545);
  padding-bottom: 10px;
}

div.right img {
  padding: 9px;
  border: 0;
}

div.right p {
  @include caption-properties;
}

div.sidebyside {
  width: 621px;
  margin-top: 25px;
  margin-bottom: 25px;
}

div.sidebysideleft {
  border-radius: 10px;
  width: 298px;
  text-align: center;
  float: left;
  padding-bottom: 10px;
  border: $border-properties;
  background-color: #343434;
  @include gradients(bottom, #343434, #454545); 
}

div.sidebysideleft img {
  padding: 9px;
  border: 0;
}

div.sidebysideleft p {
  @include caption-properties;
}

div.sidebysideright {
  border-radius: 10px;
  width: 298px;
  text-align: center; 
  margin-left: 323px;
  padding-bottom: 10px;
  border: $border-properties;
  background-color: #343434;
  @include gradients(bottom, #343434, #454545);
}

div.sidebysideright img {
  padding: 9px;
  border: 0;
}

div.sidebysideright p {
  @include caption-properties;
}

div#popover_illustration {
  display: none;
  position: fixed;
  border-radius: 10px;
  width: 650px;
  text-align: center;
  top: 10%;
  float: left;
  margin-left: 150px;
  background-color: #000000;
}

div#popover_illustration img {
  padding: 9px;
}

div#popover_illustration p {
  margin-bottom: 25px;
  padding-left: 9px;
  padding-right: 9px;
  line-height: 2;
}

div#information {
  border-radius: 10px;
  width: 298px;
  float: right;
  margin-top: 10px;
  margin-left: 25px;
  margin-bottom: 25px;
  border: $border-properties;
  background-color: #343434;
  @include gradients(bottom, #343434, #454545); 
}

div#information img {
  border-radius: 10px;
  padding: 9px;
}

div#information dl {
  margin-top: 0;
  font-size: 11px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 5px;
  clear: both;
}

div#information dt {
  float: left;
  width: 140px;
  font-weight: bold;
}

div#information dd {
  margin-left: 140px;
}

div#information a {
  color: $link-colour-1;
}

div#content div#related_pictures {
  margin-top: 20px;
  padding-bottom: 8px;
  text-align: center;
}

div#content div#related_pictures a img {
  border-radius: 5px;
  border: 1px solid #333333;
  margin-bottom: -8px;
}

div#resources {
  margin-top: 20px;
  width: 623px;
}

div.resource {
  border: $border-properties;
  border-radius: 10px;
  margin-bottom: 25px;
  padding-bottom: 25px;
  overflow: auto;
  background-color: #343434;
  @include gradients(bottom, #343434, #454545); 
}

div.resource li {
  font-size: 12px;
}

div.thumbnail {
  width: 150px;
  height: 150px;
  float: left;
  clear: none;
  padding-left: 20px;
  padding-top: 20px;
}

div.thumbnail img {
  text-align: center;
  border-radius: 5px;
  border: $border-properties;
}

div.details {
  overflow: auto;
  padding-left: 20px;
  padding-right: 20px;
}

div.details p {
  margin-bottom: 0;
  font-size: 12px;
}

div.comment_thumbnail {
  width: 75px;
  height: 75px;
  float: left;
  clear: none;
  padding-left: 20px;
  padding-top: 20px;
}

div.comment_thumbnail img {
  text-align: center;
  border-radius: 5px;
  border: $border-properties;
}

div.comment_details {
  overflow: auto;
  padding-left: 20px;
  padding-right: 20px;
}

div.comment_details p.name_and_date {
  padding-top: 3px;
  font-size: 12px;
}

div.comment_details p {
  font-size: 12px;
  margin-bottom: 0;
}

div.comment_details div {
  margin-top: 20px;
  padding-bottom: 8px;
  text-align: center;
}

div.comment_details div a img {
  border-radius: 5px;
  border: $border-properties;
  margin-bottom: -8px;
}

div.comment_details audio {
  margin-top: 20px;
}

div.comment_details video {
  margin-top: 20px;
}

div#footer {
  width: 950px;
  height: 35px;
  font-size: 11px;
  background-color: $header-background-colour;
  padding-bottom: 25px;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

div#footer ul {
  text-align: center;
  padding: 25px;
  margin: 0;
}

div#footer li {
  display: inline;
  padding: 5px;
}

div#footer a {
  color: $main-text-colour;
  text-decoration: none;
}

div#footer a:hover {
  color: $link-colour-1;
}

label {
  padding-top: 10px;
  padding-bottom: 5px;
  font-size: 16px;
}

input[type="text"], input[type="email"], input[type="password"] {
  border-radius: 10px;
  border: 0;
  width: 603px;
  height: 15px;
  padding: 10px;
  font-size: 13px;
  background-color: $input-background-colour;
  color: $main-text-colour;
  border: $border-properties;
}

textarea {
  border-radius: 10px;
  border: 0;
  width: 603px;
  height: 200px;
  padding: 10px;
  font-size: 13px;
  background-color: $input-background-colour;
  color: $main-text-colour;
  margin-bottom: -5px;
  border: $border-properties;
}

textarea.data_entry {
  height: 400px;
}

textarea.status_update {
  height: 100px;
}

.scroll_checkboxes {
  border-radius: 10px;
  border: 0;
  width: 603px;
  height: 200px;
  padding: 10px;
  font-size: 13px;
  background-color: $input-background-colour;
  color: $main-text-colour;
  overflow: auto;
  margin-bottom: 15px;
  border: $border-properties;
}

input[type="checkbox"] {
  width: 25px;
}

.scroll_checkboxes label {
  font-size: 13px;
}

.illustration {
  border-radius: 10px;
  border: 0;
  width: 603px;
  padding: 10px;
  font-size: 13px;
  background-color: $input-background-colour;
  color: $main-text-colour;
  margin-bottom: 15px;
  border: $border-properties;
}

input[type="submit"] {
  height: 35px;
}

nav.pagination {
  margin-top: 25px;
  clear: both;
}

nav.chapters {
  clear: both;
}

p.links {
  clear: both;
}

.unpublished {
  color: $alert-text;
}

.unviewed {
  color: $alert-text;
}

.completed {
  color: $good-text;
}

.incomplete {
  color: $alert-text;
}

blockquote {
  font-style: italic;
}

div#flash_notice {
  padding-bottom: 25px;
  color: $good-text;
}

div#flash_alert, div#flash_recaptcha_error {
  padding-bottom: 25px;
  color: $bad-text;
}

div#errorExplanation {
  color: $bad-text;
  background-color: $input-background-colour;
  border: $border-properties;
  padding-left: 25px;
  margin-bottom: 25px;
  border-radius: 10px;
}

div#errorExplanation h2 {
  text-shadow: 0 0 0;
}

.field_with_errors {
  display: inline;
}
